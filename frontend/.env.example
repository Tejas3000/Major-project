# DeFi Lending Platform - Frontend Environment Variables
# Copy this file to .env.local and update the values

# API Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_WS_URL=ws://localhost:8000/ws

# Contract Addresses (Update after deployment)
VITE_LENDING_POOL_ADDRESS=
VITE_INTEREST_RATE_ORACLE_ADDRESS=

# Network Configuration
VITE_DEFAULT_CHAIN_ID=11155111
VITE_SUPPORTED_CHAIN_IDS=1,11155111,137,80001,31337

# Alchemy/Infura API Keys (for fallback RPC)
VITE_ALCHEMY_API_KEY=
VITE_INFURA_API_KEY=

# WalletConnect Project ID (for WalletConnect support)
VITE_WALLETCONNECT_PROJECT_ID=

# Feature Flags
VITE_ENABLE_TESTNET=true
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_ANALYTICS=false

# UI Configuration
VITE_APP_NAME=DeFi Lending
VITE_APP_DESCRIPTION=ML-Powered Decentralized Lending Platform
